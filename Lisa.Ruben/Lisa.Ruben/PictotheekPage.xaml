<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Lisa.Ruben.PictotheekPage">
	<ContentPage.Content>
		<StackLayout BackgroundColor="White">
			<ScrollView Orientation="Horizontal" VerticalOptions="CenterAndExpand" x:Name="pictoScroll">
     			<StackLayout Orientation = "Horizontal" BackgroundColor="Transparent" VerticalOptions="CenterAndExpand" Padding="15,15,0,20"  x:Name="pictoTheek">
	    		   <!-- dynamicly added pictos come here -->	
        	</StackLayout>
    		</ScrollView>
        	<StackLayout Orientation="Horizontal" BackgroundColor="Silver" HeightRequest="75" x:Name="buttonBar">
				<Button Text = "Voeg Picto Toe" Clicked="AddNewPicto" WidthRequest="250" VerticalOptions="Center" FontSize="19"/>
				<Button Text = "Maak Nieuwe Picto" Clicked="CreateNewPicto" WidthRequest="250" VerticalOptions="Center" FontSize="19"/>
				<Button Text = "Verwijder Picto" Clicked="OnRemovePictoClick" WidthRequest="250" VerticalOptions="Center" x:Name="removePictoButton" FontSize="19"/>
	        </StackLayout>
	   	</StackLayout>
	</ContentPage.Content>
</ContentPage>